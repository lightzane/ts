{
    "name": "ts",
    "version": "0.0.0",
    "scripts": {
        "start": "tsc && node dist/main",
        "start:dev": "nodemon --ext ts --exec \"rimraf dist/**/* && npm start || exit 1\" --ignore \"**/*.spec.ts\"",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^26.0.24",
        "jest": "^27.0.6",
        "nodemon": "^2.0.7",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.4"
    },
    "jest": {
        "clearMocks": true,
        "collectCoverage": false,
        "coverageDirectory": "coverage",
        "coverageProvider": "v8",
        "rootDir": "src",
        "testMatch": [
            "**/*.spec.ts",
            "*.spec.ts"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    }
}
