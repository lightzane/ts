{
  "name": "ts",
  "version": "0.0.0",
  "scripts": {
    "start": "tsc && node dist/main",
    "start:dev": "nodemon src/main.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "nodemon": "^2.0.16",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "rootDir": "src",
    "testMatch": [
      "**/*.spec.ts",
      "*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
